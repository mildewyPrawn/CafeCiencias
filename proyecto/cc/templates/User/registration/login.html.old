{% extends "cc/base.html" %}

{% load static %}

{% block css_content %}

{% endblock %}

{% block body_content %}

<!-- css for login -->
<link rel="stylesheet" href="{% static 'cc/login.css' %}">

<div class="return-btn" style="text-align: start">
  <a class="btn btn-primary" href="{% url 'index' %}">Home</a>
</div>

<!-- letrero -->
<h1 align="center">Página para iniciar la poderosa [la poderosa := sesión]</h1><br>

<body>
  <div class="wrap-login100 p-l-55 p-r-55 p-t-80 p-b-30">
    <form method="post" class="from-group">
      {% csrf_token %}
      <div class="input-group">
        <input type="email" class="form-control" name="username" placeholder="Email">
        <div class="input-group-append">
          <span class="input-group-text">
          </span>
        </div>
      </div>

      {% if form.username.errors %}
      {% for error in form.username.errors %}
      <div class="input-error">
        {{ error }}
      </div>
      {% endfor %}
      {% endif %}
      
      <div class="form-group">
        <label class="label">Contraseña</label>
        <div class="input-group">
          <input type="password" class="form-control" name="password" placeholder="*********" required>
          <div class="input-group-append">
            <span class="input-group-text">
              <i class="mdi mdi-check-circle-outline"></i>
            </span>
          </div>
        </div>
      </div>
      
      <button type="submit" class="btn btn-success">Iniciar Sesión</button>
    </form>

  </div>
</body>


<p><a href='#'>Crea una cuenta</a></p>
<p><a href='#'>¿Olvidaste tu contraseña, meco?</a></p>
<p><a href='/about/'>Acerca de nosotros</a></p>
<center>
  <div>
    Copyright © 2020. Powered by
    <a href='https://www.143buzzgame.com/'>143 BuzzGame</a>
  </div>
</center>

{% endblock %}
